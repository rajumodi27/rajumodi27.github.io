---
import { SEO } from 'astro-seo';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'MCA student at Dharmsinh Desai University and Junior Software Engineer at Infopercept. Specializing in Full-Stack Development, AI/ML projects, and software security. Experience with Python, Django, and modern development practices.',
  ogImage = '/og.png',
} = Astro.props as Props;

const twitterHandle = '@RajuModi';
---

<SEO
  title={title ? `${title} | Raju Modi` : 'Raju Modi | Security Researcher'}
  description={description}
  openGraph={{
    basic: {
      title: 'Raju Modi',
      type: 'website',
      image: ogImage,
    },
  }}
  twitter={{
    creator: twitterHandle,
    card: 'summary_large_image',
    site: twitterHandle,
    title: 'Raju Modi',
    description,
    image: ogImage,
    imageAlt: 'Raju Modi Blog',
  }}
  extend={{
    link: [
      {
        rel: 'sitemap',
        href: '/sitemap-index.xml',
      },
    ],
