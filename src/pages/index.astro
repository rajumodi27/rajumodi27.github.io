---
import { Picture } from 'astro:assets';
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import Avatar from '../assets/images/avatar.png';
import AllTimeViews from '../components/AllTimeViews';
import BlogPostCard from '../components/BlogPostCard.astro';

const allBlogPosts = await getCollection('blogs');
const sortedPosts = allBlogPosts.sort(
    (a, b) => Number(new Date(b.data.date)) - Number(new Date(a.data.date))
);

const colors = [
    'from-[#D8B4FE] to-[#818CF8]',
    'from-[#6EE7B7] via-[#3B82F6] to-[#9333EA]',
    'from-[#FDE68A] via-[#FCA5A5] to-[#FECACA]',
];
---

<MainLayout>
    <div class='flex flex-col justify-center items-start max-w-2xl border-gray-200 dark:border-gray-700 mx-auto pb-16'>
        <div class='flex flex-col-reverse sm:flex-row items-start'>
            <div class='flex flex-col pr-8'>
                <h1 class='font-bold text-3xl md:text-5xl tracking-tight mb-1 text-black dark:text-white' transition:name='heading'>
                    Raju Modi
                </h1>
                <h2 class='text-gray-700 dark:text-gray-200 mb-4'>
                    MCA Student at DDU | Junior Software Engineer at Infopercept
                </h2>
                <p class='text-gray-600 dark:text-gray-400 mb-16'>
                    Full-Stack Developer with expertise in Security implementations and BCA graduate with 8.5 CGPA. 
                    Currently pursuing MCA and focusing on platform development and security automation solutions.
                </p>
            </div>
            <div class='w-[80px] sm:w-[176px] relative mb-8 sm:mb-0 mr-auto'>
                <Picture src={Avatar} class='rounded-full' alt='Raju Modi' formats={['avif', 'webp']} />
            </div>
        </div>
        <h3 class='mb-4 text-2xl font-bold tracking-tight text-black md:text-4xl dark:text-white'>
            Connect With Me
        </h3>
        <div class='grid w-full grid-cols-1 gap-4 my-2 mt-4 sm:grid-cols-2 mb-8'>
            <a href='https://linkedin.com/in/raju-modi' class='transform hover:scale-[1.01] transition-all border dark:border-gray-800 rounded p-4 w-full bg-white dark:bg-gray-900' target='_blank' rel='noopener noreferrer'>
                <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/>
                </svg>
                <h3 class='text-lg font-bold text-left mt-2 text-gray-900 dark:text-gray-100'>
                    LinkedIn
                </h3>
                <p class='mt-1 text-gray-700 dark:text-gray-400'>
                    Professional Network
                </p>
            </a>
            <a href='https://github.com/RAJUMODI27' class='transform hover:scale-[1.01] transition-all border dark:border-gray-800 rounded p-4 w-full bg-white dark:bg-gray-900' target='_blank' rel='noopener noreferrer'>
                <svg xmlns='http://www.w3.org/2000/svg' width='2em' height='2em' viewBox='0 0 24 24' aria-label='Github'>
                    <path fill='currentColor' d='M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2'></path>
                </svg>
                <h3 class='text-lg font-bold text-left mt-2 text-gray-900 dark:text-gray-100'>
                    Github
                </h3>
                <p class='mt-1 text-gray-700 dark:text-gray-400'>
                    View my projects
                </p>
            </a>
            <a href='/donation' class='transform hover:scale-[1.01] transition-all border dark:border-gray-800 rounded p-4 w-full bg-white dark:bg-gray-900'>
                <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" viewBox="0 0 24 24">
                    <path fill="currentColor" d="m12 21.35l-1.45-1.32C5.4 15.36 2 12.27 2 8.5C2 5.41 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.08C13.09 3.81 14.76 3 16.5 3C19.58 3 22 5.41 22 8.5c0 3.77-3.4 6.86-8.55 11.53L12 21.35Z"/>
                </svg>
                <h3 class='text-lg font-bold text-left mt-2 text-gray-900 dark:text-gray-100'>
                    Support Me
                </h3>
                <p class='mt-1 text-gray-700 dark:text-gray-400'>
                    Help fund my OSCP journey
                </p>
            </a>
            <AllTimeViews client:only='react' />
        </div>
        <h3 class='font-bold text-2xl md:text-4xl tracking-tight mb-6 text-black dark:text-white'>
            Recent Projects
        </h3>
        <div class='flex gap-6 flex-col md:flex-row'>
            {sortedPosts.slice(0, 3).map((post, key) => {
                return (
                    <BlogPostCard
                        title={post.data.title}
                        slug={post.slug}
                        gradient={colors[key]}
                    />
                );
            })}
        </div>
        <a href='/blog' class='flex items-center mt-8 text-gray-600 dark:text-gray-400 leading-7 rounded-lg hover:text-gray-800 dark:hover:text-gray-200 transition-all h-6'>
            {'View all posts'}
            <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' class='h-6 w-6 ml-1'>
                <path stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width={2} d='M17.5 12h-15m11.667-4l3.333 4-3.333-4zm3.333 4l-3.333 4 3.333-4z'></path>
            </svg>
        </a>
    </div>
</MainLayout>